% Use the maximum possible size
\def\imgwidth{%
  \ifdim\Gin@nat@width>\imgmaxwidth%
    \imgmaxwidth%
  \else%
    \Gin@nat@width%
  \fi%
}

\def\imgheight{%
  \ifdim\Gin@nat@height>\imgmaxheight%
    \imgmaxheight%
  \else%
    \Gin@nat@height%
